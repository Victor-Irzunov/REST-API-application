{{!-- //№67 - Страница нового парол --}}

<div class="row">

	<div class="col s6 offset-s3">


		{{#if error}} {{!--№61 - Сообщения об ошибке--}}
		<p class="alert">{{error}}</p> {{!--№61 - Сообщения об ошибке--}}
		{{/if}} {{!--№61 - Сообщения об ошибке--}}

		<h3>Задать новый пароль</h3>
		<form action="/auth/password" method="POST"> {{!--№52 - Добавление сессии --}}

			<div class="input-field">
				<input id="password" name="password" type="password" class="validate" required>
				<label for="password">Новый пароль</label>
				<span class="helper-text" data-error="введите пароль"></span>
			</div>



			<input type="hidden" name="_csrf" value="{{csrf}}"> {{!-- _csrf на донное название удет смотреть middleware
			и автомат будет делать всёза нас ---- //№60 - Добавление CSRF-защиты--}}
			<input type="hidden" name="userId" value="{{userId}}"> {{!-- №67 - Страница нового пароля --}}

			<input type="hidden" name="token" value="{{token}}"> {{!-- №67 - Страница нового пароля --}}

			<button class="btn btn-primary" type="submit">Обновить пароль</button>
		</form>
	</div>
</div>